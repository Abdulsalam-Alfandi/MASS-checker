<?xml version="1.0"?>
<ruleset name="My custom PMD ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>My custom PMD ruleset</description>

    <rule name="ConfusingTernary" language="java" >
        <description>Identify confusing ternary statements</description>
        <priority>3</priority>
        <properties>
            <property name="threshold" value="2" description="Number of conditional expressions that a ternary should not exceed"/>
        </properties>
    </rule>

    <rule name="LocalVariableCouldBeFinal" language="java">
        <description>Detects local variables that could be declared final</description>
        <priority>2</priority>
    </rule>

    <rule name="CognitiveComplexity" language="java">
        <description>Detects methods with high cognitive complexity</description>
        <priority>3</priority>
        <properties>
            <property name="threshold" value="15" description="The cognitive complexity threshold"/>
        </properties>
    </rule>

    <rule name="LawOfDemeter" language="java">
        <description>Flags violations of the Law Of Demeter</description>
        <priority>4</priority>
    </rule>

    <rule name="UnusedImports" language="java">
        <description>Flags unused imports</description>
        <priority>3</priority>
    </rule>

    <rule name="CollapsibleIfStatements" language="java">
        <description>Identify unnecessarily nested 'if' statements</description>
        <priority>2</priority>
    </rule>

    <rule name="UseStringBufferForStringAppends" language="java">
        <description>Flags concatenation of Strings with '+' operator</description>
        <priority>3</priority>
    </rule>

</ruleset>
